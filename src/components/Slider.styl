.wave-slider
  position: relative;
  height: 300px;
  z-index: 0;

  &__wrapper
    position: relative;
    z-index: 0;
    height: 100%;

  &__slide
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;

    & > *
      width: 100%;
