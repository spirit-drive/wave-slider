.wave-slider-nav
  position: absolute;
  display: flex;
  font-size: 0;
  z-index: 1;

  &_center
    left: 50%;
    bottom: 20px;
    transform: translateX(-50%);

  &_right
    top: 50%;
    right: 20px;
    transform: translateY(-50%);
    flex-direction: column;

  &_left
    top: 50%;
    left: 20px;
    transform: translateY(-50%);
    flex-direction: column;

  &__item
    display: inline-flex;
    padding: 0;
    border: 0;
    border-radius: 100%;
    align-items: center;
    justify-content: center;
    outline: none;
    cursor: pointer;
    background: none;

    &_active
      border: 1px solid #999;

      & .wave-slider-nav__points
        opacity: 0;

  &__points
    opacity: 1;
    border-radius: 100%;
    background-color: #fff;
    transition: all 0.3s;

  &__point
    border-radius: 100%;
    background-color: #000;

    &-wrapper
      position: absolute;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 300ms;